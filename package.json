{
  "name": "smart-home-automation",
  "version": "1.0.0",
  "description": "A research project by MDC. This project focuses on creating automation tools for smart homes.",
  "scripts": {
    "start:frontend": "cd ./front-end && npm start",
    "start:backend": "nodemon --exec python ./back-end/app.py",
    "start": "concurrently -n \"Front-end,Back-end\" -c \"blue,green\" \"npm start --prefix front-end\" \"npm run start:backend\"",
    "create-env": "python -m venv env",
    "activate-env": "env\\Scripts\\activate.bat",
    "install:back-end": "pip install -r requirements.txt",
    "install:front-end": "cd front-end/ && npm install",
    "postinstall": "npm run install:front-end && npm run create-env && npm run activate-env && npm run install:back-end",
    "start-frontend": "cd ./front-end && npm start",
    "start-backend-mac": "nodemon --exec python3 ./back-end/app.py",
    "start-mac": "concurrently -n \"Front-end,Back-end\" -c \"blue,green\" \"npm start-frontend\" \"npm run start-backend-mac\"",
    "create-env-mac": "python3 -m venv env",
    "install-front-end": "cd front-end/ && npm install",
    "install-back-end": "pip install -r requirements.txt",
    "install-mac": "npm run install-front-end && npm run create-env-mac && ( . env/bin/activate && npm run install-back-end )"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  }
}
