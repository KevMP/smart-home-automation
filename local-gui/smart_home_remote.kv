BoxLayout:
    orientation: 'vertical'
    padding: '20dp'
    spacing: '20dp'
    canvas.before:
        Color:
            rgba: [0, 0, 0, 1]  # Black background
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: 'Smart Home'
        font_size: '32sp'
        size_hint_y: 0.2
        color: [1, 1, 1, 1]  # White text

    GridLayout:
        cols: 3
        spacing: '20dp'
        size_hint_y: 0.7

        Button:
            text: '[size=24sp]⬢[/size]\nSmart Vents'
            font_size: '16sp'
            markup: True
            background_normal: ''  # This disables the default texture
            background_color: [0.5, 0.5, 0.5, 1]
            on_press: root.open_smart_vents()

        Button:
            text: '[size=24sp]⬣[/size]\nSmart AC'
            font_size: '16sp'
            markup: True
            background_normal: ''  # This disables the default texture
            background_color: [0.5, 0.5, 0.5, 1]
            on_press: root.view_ac_status()

        Button:
            text: '[size=24sp]⚙[/size]\nSettings'
            font_size: '16sp'
            markup: True
            background_normal: ''  # This disables the default texture
            background_color: [0.5, 0.5, 0.5, 1]
            on_press: root.open_settings()
